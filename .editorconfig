# http://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 4
end_of_line = crlf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[*.{py,ini,yaml,yml,rst}]
indent_style = space
indent_size = 4
continuation_indent_size = 4
trim_trailing_whitespace = true

[{Makefile,*.bat}]
indent_style = tab

[*.md]
trim_trailing_whitespace = false
